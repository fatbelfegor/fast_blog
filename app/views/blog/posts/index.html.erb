<% provide(:page_title, 'All Posts') %>
<% provide(:blog_active, 'active') %>

  <% @posts.each do |post| %>
    <div class="text-center">
      <h2><%= post.title %></h2>
      <h6 class="published-date"><%= post.created_at.strftime('%b %d, %Y') %></h6>
    </div>
    <div class="text-left">
      <%= post.body.html_safe.truncate(400) %>
    </div>

    <div class="text-center">
      <%= link_to "read more...", post_path(post) %>
    </div>
     <hr>
  <% end %>
