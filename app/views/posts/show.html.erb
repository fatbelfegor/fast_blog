<% provide(:page_title, @post.title) %>

	<h2 class="text-center"><%= @post.title %></h2>
	<h5 class="text-center"><%= @post.created_at.strftime('%b %d, %Y') %></h5>
	<div><%= raw @post.body  %></div>
	<br/>
	<% if admin_signed_in? %>
    <%= link_to "Back", posts_path, class: "btn btn-success" %>
    <%= link_to "Edit", edit_post_path, class: "btn btn-default" %>
    <%= link_to "Delete", post_path, class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
  <% end %>
  <hr/>