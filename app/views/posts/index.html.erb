<% provide(:page_title, 'All Posts') %>
<% provide(:blog_active, 'active') %>

  <% @posts.each do |post| %> 
    <div class="text-center">
      <h2><%= post.title %></h2>
      <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
    </div>
    <div class="text-left">
      <%= raw(post.body).truncate(358) %>
    </div>
    <div class="text-center">
      <%= link_to "READ MORE", post_path(post) %>
    </div>
     <hr>
  <% end %>
    
  